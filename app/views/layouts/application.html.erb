<!DOCTYPE html>
<html>
  <head>
    <title>Earth Pinner</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body>
    <div class="mynavbar">
          <ul>
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "Places", places_path %></li>
              
            <li><h1 class="logo">Earth Pinner</h1></li>
                <script>
               <% if current_page?('/') %>
                  document.getElementsByClassName('logo')[0].classList.add('endlogo')
                  <% end %>
                </script>
       <% if current_user %>
              <li><%= link_to "My Profile", user_path(current_user) %> </li>
              <li><%= link_to "Sign out", signout_path, id: "sign_out" %></li>
      <% else %>
              <li></li>
              <li><%= button_to "f" + " Log In With Facebook", "/auth/facebook", class: 'facebook'%></li>
      <% end %>
          </ul>
    </div>
  <div class="container"> 
    <%= yield %>


  </div>
  <div class="main_footer">
    <ul>
      <li><%= link_to "About", about_path %></li>
      <li><%= link_to "Plan Your Trip", help_path %></li>
    </ul>
  </div>
</body>
</html>
